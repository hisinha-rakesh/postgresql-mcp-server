# Azure Deployment Configuration Template
# Copy this file to .env.deployment and fill in your values
# IMPORTANT: Never commit .env.deployment to version control!

# Azure Configuration
RESOURCE_GROUP=rg-postgres-mcp
LOCATION=eastus
ACR_NAME_PREFIX=acrpostgresmcp
CONTAINER_NAME=aci-postgres-library
DNS_NAME_PREFIX=postgres-mcp-db

# PostgreSQL Database Configuration
# IMPORTANT: Change these values before deployment!
POSTGRES_DB=librarydatabase
POSTGRES_USER=rakuser
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD_BEFORE_DEPLOYMENT

# Container Resources
CPU_CORES=1
MEMORY_GB=1.5

# Image Configuration
IMAGE_NAME=postgres-library
IMAGE_TAG=latest
